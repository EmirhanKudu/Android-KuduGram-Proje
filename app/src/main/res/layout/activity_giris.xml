<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplankudugram"
    tools:context=".KaydolActivity">

    <TextView
        android:id="@+id/girisyap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text='KuduGram'
        android:textColor="@color/black"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/kullaniciadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/girisyap"
        android:layout_margin="15dp"
        android:background="#30ffffff"
        android:hint="Kullanıcı Adı:"
        android:textColorHint="@color/black"
        android:padding="20dp"

        android:drawablePadding="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sifre"
        android:layout_below="@id/kullaniciadi"
        android:layout_margin="15dp"
        android:background="#30ffffff"
        android:hint="Şifre:"
        android:textColorHint="@color/black"
        android:padding="20dp"

        android:drawablePadding="15dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/girisbuton"
        :layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sifre"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/black"
        android:text="giriş" />

    <TextView
        android:id="@+id/sifreunuttum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/girisbuton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Kaydol"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/kudugram"
" />


</RelativeLayout>