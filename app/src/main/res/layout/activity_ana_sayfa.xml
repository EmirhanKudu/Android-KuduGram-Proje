    <TextView
        android:id="@+id/aracyazi"
        android:layout_width="190dp"
        android:layout_height="138dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
